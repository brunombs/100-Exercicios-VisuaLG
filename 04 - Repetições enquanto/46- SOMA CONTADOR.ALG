algoritmo "Soma contador"
var
   contador, soma, numero: inteiro
inicio
      contador<-0
      soma<-0
      numero<-0
      Enquanto (contador < 100) faça
      numero <- numero + 2
      soma <- soma + numero
      contador <- contador + 1
      Fimenquanto
      Escreva("A soma é", soma)
fimalgoritmo