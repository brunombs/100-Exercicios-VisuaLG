algoritmo "Somatório entre sete números"
var
x, numero, soma: inteiro
inicio
      escreval("Calcular a soma de 7 números")
      x <- 0
      enquanto (x < 7) faca
      escreva ("Digite um número: ")
      leia (numero)
      soma <- soma + numero
      x <- x + 1
      fimenquanto
      escreval("Soma = ", soma)
fimalgoritmo